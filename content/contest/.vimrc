syntax on
set number
set relativenumber
set autoindent
set smarttab
set smartindent
set mouse=a
set clipboard+=unnamedplus

set tabstop     =4
set softtabstop =4
set shiftwidth  =4
set expandtab

set ttimeout
set ttimeoutlen=1
set ttyfast

let &t_SI = "\<Esc>[6 q"
let &t_SR = "\<Esc>[4 q"
let &t_EI = "\<Esc>[2 q"

hi Visual cterm=none ctermbg=darkgrey ctermfg=cyan

